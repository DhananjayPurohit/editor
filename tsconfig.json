{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "files": ["src/index.tsx"],
  "include": ["test/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "forceIsolatedModules": true,
    "silent": true
  }
}
